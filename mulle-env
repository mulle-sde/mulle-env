[ "${TRACE}" = 'YES' -o "${MULLE_ENV_TRACE}" = 'YES' ] && set -x && : "$0" "$@"

MULLE_ENV_VERSION="2.1.2"

#
# The default for first time mulle-env
#
MULLE_ENV_DEFAULT_STYLE="developer/relax"
ENVFILENAME="environment.sh"


emit_options()
{
   cat <<EOF
   -C <cmd>      : like -c, but command and each argument are separated by LF
   -c <cmd>      : shell command to execute instead of interactive subshell
   -d <dir>      : specify directory
   -DKEY=VALUE   : define one-time environment variable
   -ef <file>    : use a different environment file (${ENVFILENAME})
   -N            : search for nearest enclosing environment
   -P            : search for parent enivronment
   -p <path>     : specify an additional plugin search path
   -S            : search for superior environment
   -s <tool/env> : enter subshell with a certain style (${MULLE_ENV_DEFAULT_STYLE})
EOF

   if [ ! -z "${MULLE_TRACE}" ]
   then
      options_technical_flags_usage "         : "
   fi
}


#
# restrict has this problem, that on linux cmake is installed in /bin
# and everything works find and then you go to darwin where its in
# /usr/local/bin and things fail
#
usage()
{
   [ $# -ne 0 ] && log_error "$1"

    cat <<EOF >&2
Usage:
   ${MULLE_USAGE_NAME} [options] [commands] [path-or-url]

   Create a virtual environment with a custom set of environment variables
   and tools for use in a subshell. If the directory at "path-or-url" does not
   exist and the path looks like an URL, then ${MULLE_USAGE_NAME} will attempt
   to \`git clone\` that URL.

   Use the -c or -C options to run commands in the virtual environment
   without entering an interactive subshell.
EOF

   if [ ! -z "${MULLE_TRACE}" ]
   then
      cat <<EOF >&2

   Use style "none/wild" for no PATH and environment restrictions. Aliases
   and shell settings will still be suppressed.
EOF
   fi

   cat <<EOF >&2

Options:
EOF
   emit_options | LC_ALL=C sort >&2

   cat <<EOF >&2

Commands:
   environment   : manage subshell environment variables
   envstyles     : list available environment styles
   init          : set up the subshell for the first time
   clean         : force relink of tools
   subenv        : enter a sub environment
   tool          : manage subshell tools
   toolstyles    : list available tool styles (including plugins)
   upgrade       : upgrade a subshell to a newer mulle-env version
   uname         : return the ${MULLE_USAGE_NAME} specific uname
   version       : return the ${MULLE_USAGE_NAME} version
   --            : enter the subshell
EOF

   if [ ! -z "${MULLE_TRACE}" ]
   then
      cat <<EOF >&2

Tool-style: (built-in only, see \`mulle-sde toolstyles\` for all available)
   none          : a fairly empty virtual environment
   minimal       : a minimal set of tools (like cd, ls)
   developer     : a common set of tools (like cd, ls, awk, man) (default)

Env-style:
   tight         : all environment variables are user defined
   relax         : none + inherit some environment (e.g. SSH_TTY) (default)
   restrict      : relax + all /bin and /usr/bin tools.
   inherit       : restrict + all PATH tools
   wild          : no restrictions

EOF
   else
      echo "      (use -v help to see more usage text)"
   fi

  exit 1
}


#
# start:     starting directory
# search:    NONE (useless) NEAREST, SUPERIOR, DEFAULT
# useclimb:
#
r_find_best_environment()
{
   log_entry "r_find_best_environment" "$@"

   local start="$1"
   local searchmode="$2"

   local directory
   local best
   local warn
   local searchfile

   best="${start}"
   r_absolutepath "${start}"
   directory="${RVAL}"  # paranoia

   warn='NO'

   while :
   do
      searchfile="${directory}/.mulle/share/env/environment.sh"
      if [ -f "${searchfile}" ]
      then
         log_debug "Found \"${searchfile}"

         case "${searchmode}" in
            NEAREST)
               RVAL="${directory}"
               return
            ;;

            PARENT)
               if [ ! -z "${best}" ]
               then
                  RVAL="${directory}"
                  return
               fi
            ;;

            SUPERIOR)
               log_debug "Keep looking past \"${directory}\""
            ;;

            DEFAULT)
               if [ -f "${directory}/.mulle/share/env/defer" -o \
                    -f "${directory}/.mulle/etc/env/defer" ]
               then
                  log_debug "\"${directory}\" is defering with tweak \"defer\""
               else
                  RVAL="${directory}"
                  return
               fi
            ;;

            *)
               internal_fail "unknown searchmode \"${searchmode}\""
            ;;
         esac
         best="${directory}"
      else
         log_debug "Did not find \"${searchfile}\""
      fi

      r_fast_dirname "${directory}"
      directory="${RVAL}"

      # look for .mulle/share/env/*/environment.sh going up to root, if we
      # find one, we latch onto it
      if [ "${directory}" = "/" ]
      then
         RVAL="${best}"
         return
      fi
   done

   if [ "${warn}" = 'YES' ]
   then
      log_info "Using the superior mulle-env environment at \
${C_RESET_BOLD}${best}${C_INFO}.
Suppress this behaviour with the flag \"-N\" or permanently suppress on a
per environment basis with:
   ${C_RESET_BOLD}mulle-env tweak subproject"

   fi

   log_debug "Accept as superior"
   RVAL="${best}"
}


_setup_environment()
{
   log_entry "_setup_environment" "$@"

   local directory="$1"
   local setroot="$2"

   [ -z "${MULLE_HOSTNAME}" ] && internal_fail "MULLE_HOSTNAME not set"

   local physicaldir

   physicaldir="`physicalpath "${directory}" `"
   [ ! -d "${physicaldir}" ] && internal_fail "physicalpath failed"
   [ "${physicaldir}" = "/" ] && fail "Running in / which is not supported"

   if [ "${setroot}" = 'YES' ]
   then
      MULLE_VIRTUAL_ROOT="${physicaldir}"
   fi

   MULLE_ENV_VAR_DIR="${physicaldir}/.mulle/var/${MULLE_HOSTNAME}/env"
   MULLE_ENV_SHARE_DIR="${physicaldir}/.mulle/share/env"
   MULLE_ENV_ETC_DIR="${physicaldir}/.mulle/etc/env"

   if [ "${MULLE_FLAG_LOG_SETTINGS}" = 'YES' ]
   then
      log_trace2 "MULLE_VIRTUAL_ROOT  set to \"${MULLE_VIRTUAL_ROOT}\""
      log_trace2 "MULLE_ENV_ETC_DIR   set to \"${MULLE_ENV_ETC_DIR}\""
      log_trace2 "MULLE_ENV_SHARE_DIR set to \"${MULLE_ENV_SHARE_DIR}\""
      log_trace2 "MULLE_ENV_VAR_DIR   set to \"${MULLE_ENV_VAR_DIR}\""
   fi
}


_default_setup_environment()
{
   log_entry "_default_setup_environment" "$@"

   local directory="${1:-${PWD}}"
   local searchmode="$2"
   local setroot="${3:-YES}"

   r_find_best_environment "${directory}" "${searchmode}"
   directory="${RVAL}"
   log_fluff "Environment directory determined to be \"${directory}\""

   [ ! -d "${directory}" ] && fail "${directory} does not exist (init it first)"

   _setup_environment "${directory}" "${setroot}"
}

#
# smallish library of functions
#

protect_file()
{
   log_entry "protect_file" "$@"

   local filename="$1"

   if [ "${OPTION_PROTECT_SHARE}" != 'NO' ]
   then
      exekutor chmod -f a-w "${filename}" || exit 1
   fi
}


protect_file_if_exists()
{
   log_entry "protect_file" "$@"

   local filename="$1"

   if [ "${OPTION_PROTECT_SHARE}" != 'NO' ]
   then
      if [ -e "${filename}" ]
      then
         exekutor chmod -f a-w "${filename}" || exit 1
      fi
   fi
}


unprotect_file_if_exists()
{
   log_entry "unprotect_file_if_exists" "$@"

   local filename="$1"

   if [ "${OPTION_PROTECT_SHARE}" != 'NO' ]
   then
      if [ -e "${filename}" ]
      then
         exekutor chmod -f ug+w "${filename}"
      fi
   fi
}

unprotect_dir_if_exists()
{
   log_entry "unprotect_dir_if_exists" "$@"

   local directory="$1"

   if [ "${OPTION_PROTECT_SHARE}" != 'NO' ]
   then
      if [ -d "${directory}" ]
      then
         exekutor chmod -f ug+wX "${directory}"
      fi
   fi
}


#
# tool support
#
__get_tool_filepath()
{
   local extension="${1:-.${MULLE_UNAME}}"

   _filepath="${MULLE_ENV_SHARE_DIR}/tool\
:${MULLE_ENV_SHARE_DIR}/tool${extension}\
:${MULLE_ENV_ETC_DIR}/tool\
:${MULLE_ENV_ETC_DIR}/tool${extension}"
}


_env_tool2_status()
{
   log_entry "_env_tool2_status" "$@"

   local compile

   local _filepath

   __get_tool_filepath

   log_debug "Checking if compile is needed with: ${_filepath}"

   local compile
   local anymatch

   anymatch='NO'
   compile='NO'

   IFS=":"
   for file in ${_filepath}
   do
      IFS="${DEFAULT_IFS}"

      if [ ! -f "${file}" ]
      then
         log_debug "\"${file}\" does not exist"
         continue
      fi

      # make same date force recompile, because we can't be sure then
      if [ "${MULLE_ENV_VAR_DIR}/tool" -nt "${file}" ]
      then
         log_debug "\"${file}\" is not newer than \"${MULLE_ENV_VAR_DIR}/tool\""
      else
         log_fluff "Compile is needed because \"${file}\" has edits"
         compile='YES'
      fi
      anymatch='YES'
   done
   IFS="${DEFAULT_IFS}"

   if [ "${compile}" = 'NO' ]
   then
      if [ "${anymatch}" = 'YES' -o -f "${MULLE_ENV_VAR_DIR}/tool" ]
      then
         return 0
      fi
      return 2
   fi

   return 1
}


#
# dealing with styles and flavors and their changes
#
_r_get_saved_version()
{
   log_entry "_r_get_saved_version" "$@"

   local sharedir="$1"
   local fallbackroot="$2"

   RVAL="`grep -v '^#' "${sharedir}/version" 2> /dev/null`"
   if [ "${RVAL}" = "" ]
   then
      # old location
      RVAL="`grep -v '^#' "${fallbackroot}/.mulle-env/share/version" 2> /dev/null`"
   fi

   [ "${RVAL}" != "" ]
}


__check_version()
{
   log_entry "__check_version" "$@"

   if [ "${MULLE_FLAG_MAGNUM_FORCE}" = 'YES' ]
   then
      return
   fi

   local version

   _r_get_saved_version "$@"
   version="${RVAL}"

   case "${version}" in
      "")
         fail "\"${PWD}\" is not a mulle-env environment (no version information found)"
      ;;

      0\.*|1\.*)
         # incompatible change of -c execution, otherwise try to support
         # and make this a warning
         fail "This environment with version ${version} is too old for
mulle-env ${MULLE_ENV_VERSION}.
${C_INFO}You can upgrade to ${MULLE_ENV_VERSION} with:
${C_RESET_BOLD}   cd \"${MULLE_VIRTUAL_ROOT}\"
${C_RESET_BOLD}   mulle-env upgrade"
      ;;

      2\.*)
      ;;

      *)
         fail "This environment requires a newer mulle-env version >= ${version}"
      ;;
   esac
}


env_setup_if_needed()
{
   log_entry "env_setup_if_needed" "$@"

   local directory="$1"
   local vardir="$2"
   local sharedir="$3"
   local style="$4"
   local flavor="$5"
   local oldstyle="$6"
   local oldflavor="$7"

   local bindir
   local libexecdir

   bindir="${vardir}/bin"
   libexecdir="${vardir}/libexec"

   local needs_flavor_update
   local needs_bin_update

   needs_flavor_update='NO'
   needs_bin_update='DEFAULT'

   local callback

   #
   # need to do this to convert from developer back to minimal or none
   #
   if [ "${style}" != "${oldstyle}" ]
   then
      rmdir_safer "${bindir}"
      rmdir_safer "${libexecdir}"
      needs_bin_update='YES'
   fi

   if [ "${flavor}" != "${oldflavor}" ]
   then
      log_info "You affected a tool style change from \
\"${oldflavor}\" to \"${flavor}\". You may want to
check your tool list.
   ${C_RESET_BOLD} mulle-env tool list"
   fi

   if [ "${needs_bin_update}" = 'DEFAULT' ]
   then
      if _env_tool2_status
      then
         needs_bin_update='NO'
      else
         needs_bin_update='YES'
      fi
   fi

   if [ "${needs_bin_update}" = 'YES' ]
   then
      [ -z "${MULLE_ENV_TOOL2_SH}" ] && \
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-tool2.sh"

      local text
      local toolsfile

      toolsfile="${sharedir}/tool"
      log_verbose "Creating \"${toolsfile}\""
      if ! text="`print_${flavor}_tools_sh "${style}" | sort -u`"
      then
         fail "Tool install of \"${flavor}\" failed"
      fi
      redirect_exekutor "${toolsfile}" echo "${text}"

      env_tool2_link --compile \
                     --bindir "${bindir}" || exit 1
      (
         local callback

         callback="env_setup_${flavor}_tools"
         if [ "`type -t "${callback}"`" = "function" ]
         then
            ${callback} "${bindir}" "${libexecdir}" || exit 1
         fi
      ) || exit 1
   fi
}


#
# also check version
#
__fail_get_saved_style_flavor()
{
   log_entry "__fail_get_saved_style_flavor" "$@"

   local directory="$1"

   r_simplified_absolutepath "${directory}"
   directory="${RVAL}"

   local userdir

   r_fast_dirname "${directory}"  # ../env
   r_fast_dirname "${directory}"  # ../${HOSTNAME}
   r_fast_dirname "${directory}"  # ../var
   r_fast_dirname "${directory}"  # ../.mulle
   userdir="${RVAL}"

   fail "No properly setup environment found in candidate project \
directory \"${userdir}\" as \"${directory}\" or \"${fallback}\" contain no \
style information."
}


__get_saved_style_flavor()
{
   log_entry "__get_saved_style_flavor" "$@"

   local directory="$1"
   local fallback="$2"

   local filename

   # make foo:bar foo/bar for backwards compatibility
   filename="${directory}/style.${LOGNAME:-all}"
   style="`sed -e '/^#/d' -e 's|:|/|g' "${filename}" 2> /dev/null `"
   if [ -z "${style}" ]
   then
      filename="${fallback}/style"
      style="`sed -e '/^#/d' -e 's|:|/|g' "${filename}" 2> /dev/null `"
      if [ -z "${style}" ]
      then
         log_debug "No previous style found ${filename}"
         return 1
      fi
   fi
   log_fluff "Previous style \"${style}\" found in \"${filename}\""

   flavor="${style%%/*}"
   return 0
}



__get_style_flavor()
{
   log_entry "__get_style_flavor" "$@"

   style="$1"
   flavor="${style%%/*}"
}


__load_flavor_plugin()
{
   log_entry "__load_flavor_plugin" "$@"

   local flavor="$1"

   # shellcheck source=src/mulle-env-plugins.sh
   . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-plugins.sh" || exit 1

   local searchpath
   r_plugin_searchpath
   searchpath="${RVAL}"

   if ! _env_load_plugin "${flavor}" "${searchpath}"
   then
      if [ "${MULLE_FLAG_MAGNUM_FORCE}" != 'YES' ]
      then
         fail "No plugin \"${flavor}\" found in \"${searchpath}\".
${C_INFO}Fixes:
   * install the missing mulle-env plugin or modify MULLE_ENV_PLUGIN_PATH
   * use ${MULLE_USAGE_NAME} -f to skip this check.
   * change to an available style with ${MULLE_USAGE_NAME} --style"
      fi
      return 1
   else
      log_fluff "Env plugin \"${flavor}\" loaded"
   	log_verbose "Using plugin ${C_MAGENTA}${C_BOLD}${flavor}"
   fi
}


apply_style_to_directory()
{
   log_entry "apply_style_to_directory" "$@"

   local directory="$1"
   local sharedir="$2"
   local style="$3"
   local flavor="$4"

   local callback

   callback="env_${flavor}_enter_subshell"
   if [ "`type -t "${callback}"`" = "function" ]
   then
      ${callback} "${directory}" "${style}"
   fi

   # memorize new style
   # since this always changes on user reques its in etc
   mkdir_if_missing "${MULLE_ENV_VAR_DIR}"
   redirect_exekutor "${MULLE_ENV_VAR_DIR}/style.${LOGNAME:-all}" echo "${style}"
}


r_apply_flavor_to_runpath()
{
   log_entry "r_apply_flavor_to_runpath" "$@"

   local directory="$1"
   local flavor="$2"
   local runpath="$3"

   local callback

   RVAL="${runpath}"
   callback="env_r_${flavor}_add_runpath"
   if [ "`type -t "${callback}"`" = "function" ]
   then
      ${callback} "${directory}" "${RVAL}"
   fi
}


r_censored_path()
{
   log_entry "r_censored_path" "$@"

   local i
   local j

   RVAL=""

   set -f ; IFS=":"
   for i in $*
   do
      for j in ${RESTRICTED_PATH}
      do
         set +f ; IFS="${DEFAULT_IFS}"

         if [ "$i" = "$j" ]
         then
            r_colon_concat "${RVAL}" "${i}"
         fi

         set -f ; IFS=":"
      done
   done

   set +f ; IFS="${DEFAULT_IFS}"
}


#
# run shell or command in an inferior mulle-env environment
# This is "wild" style. We don't manipulate the PATH and we
# don't clean the environment. But we augment it with the
# variables set in the inferior ENVFILENAME
#
_run_subenv()
{
   log_entry "_run_subenv" "$@"

   local directory="$1"

   directory="`simplified_absolutepath "${directory:-${PWD}}"`"

   if [ ! -d "${directory}/.mulle/share/env" ]
   then
      [ -d "${directory}" ] || fail "\"${directory}\" not found"
      fail "No mulle-env found in \"${directory}\""
   fi

   # might need to be smarter here
   case "${directory}" in
      "../"*|*"/.."|*"/../"*|"./"*|*"/."|*"/./"*|"~/"*|*"/~"|*"/~/"*)
         fail "${directory} must not have relative components"
      ;;
   esac


   MULLE_VIRTUAL_ROOT="`physicalpath "${directory}"`"

   local mode

   if [ ! -z "${OPTION_SHELL_COMMAND}" ]
   then
      log_verbose "Run subenv shell command \
\"${OPTION_SHELL_COMMAND}\" ($MULLE_VIRTUAL_ROOT})"
      mode="SUBENV:SCRIPT"
   else
      log_info "Starting subenv shell in \
${C_RESET_BOLD}${MULLE_VIRTUAL_ROOT#${PWD}/}${C_INFO}."
      mode="SUBENV:INTERACTIVE"
   fi

   if [ "${PWD}" != "${directory}" ]
   then
      exekutor cd "${directory}" || exit 1
   fi

   eval_exekutor env \
      "${CUSTOM_ENVIRONMENT}" \
      "'${MULLE_ENV_LIBEXEC_DIR}/mulle-env-shell'" \
        "'${MULLE_UNAME}'" \
        "'${MULLE_HOSTNAME}'" \
        "'${MULLE_VIRTUAL_ROOT}'" \
        "'${PATH}'" \
        "'${mode}'" \
        "'none/wild'" \
        "'${ENVFILENAME}'" \
        "'${TRACE}'" \
        "'${NO_MOTD}'" \
        "${OPTION_SHELL_COMMAND}"  # already escaped!
}


_run_subshell()
{
   log_entry "_run_subshell" "$@"

   # callerdirectory is where we are called from
   local callerdirectory

   # directory is where we are supposed to execute
   local directory


   callerdirectory="${MULLE_EXECUTABLE_PWD}"

   if [ ! -z "${OPTION_DIRECTORY}" ]
   then
      directory="${OPTION_DIRECTORY}"
   else
      if [ -z "${arg}" ]
      then
         directory="${callerdirectory}"
      else
         directory="$arg"
      fi
   fi

   if [ ! -d "${directory}" ]
   then
      local url

      case "${arg}" in
         *:*)
            url="${arg}"
         ;;

         *)
            usage "Unknown command \"${directory}\"" # sic
         ;;
      esac

      if [ ! -z "${url}" ]
      then
         if [ -z "`command -v git`" ]
         then
            fail "git not installed, can't clone stuff for you"
         fi

         r_extensionless_basename "${url}"
         directory="${RVAL}"
         log_verbose "Cloning from URL \"${arg}\" into \"${directory}\"..."
         exekutor git clone "${url}" "${directory}" || return 1
      fi
   fi

   _default_setup_environment "${directory}" "${OPTION_SEARCHMODE}"

   local etcdir
   local sharedir
   local vardir

   etcdir="${MULLE_ENV_ETC_DIR}"
   sharedir="${MULLE_ENV_SHARE_DIR}"
   vardir="${MULLE_ENV_VAR_DIR}"

   local style
   local flavor

   __check_version "${sharedir}" "${MULLE_VIRTUAL_ROOT}"

   [ ! -d "${MULLE_ENV_SHARE_DIR}" ] && fail "No environment found in \
\"${directory}\". Use \`mulle-env init\` to initialize it."

   if ! __get_saved_style_flavor "${vardir}" "${sharedir}"
   then
      __fail_get_saved_style_flavor "${vardir}"
   fi

   local oldstyle
   local oldflavor

   oldstyle="${style}"
   oldflavor="${flavor}"

   if [ "${OPTION_STYLE}" != "DEFAULT" ]
   then
      __get_style_flavor "${OPTION_STYLE}"
   fi

   local inherit_path
   local runpath
   local rundirectory

   case "${style}" in
      */*)
      ;;

      *) # no / like none
         style="none/${style}"
      ;;
   esac

   if ! __load_flavor_plugin "${flavor}"
   then
      if [ "${style}" != "${oldstyle}" ]
      then
         fail "Plugin \"${flavor}\" is not available. Current style is \"${oldstyle}\""
      fi
   fi

   local s

   s=""

   local env_flag

   env_flag="-i"

   case "${MULLE_UNAME}" in
      mingw*)
         case "${style}" in
            */wild)
            ;;

            *)
               style="${style%/*}/wild"
               log_info "On ${MULLE_UNAME} only ${style} is possible"
            ;;
      esac
   esac

   case "${style}" in
      */wild)
         inherit_path="${PATH}"
         env_flag=""   # do not suppress environment
      ;;

      */inherit)
         inherit_path="${PATH}"
      ;;

      */restrict)
         r_censored_path "${PATH}"
         inherit_path="${RVAL}"
      ;;

      */tight|*/relax)
         inherit_path=""
      ;;

      *)
         fail "unknown style \"${style}\""
      ;;
   esac

   case "${style}" in
      */restrict|*/tight|*/relax)

         [ -z "${MULLE_HOSTNAME}" ] && internal_fail "MULLE_HOSTNAME \
undefined (old mulle-bashfunctions)"


         env_setup_if_needed "${directory}" \
                             "${vardir}" \
                             "${sharedir}" \
                             "${style}" \
                             "${flavor}" \
                             "${oldstyle}" \
                             "${oldflavor}"

         r_colon_concat "${runpath}" "${vardir}/bin"
         runpath="${RVAL}"
         r_concat "${s}" "MULLE_OLDPATH='${PATH}'"
         s="${RVAL}"
      ;;
   esac

   #
   # have /usr and /usr/bin in front if possible
   # it creates less problems and have our symlinks as fallbacks only
   #
   r_colon_concat "${inherit_path}" "${runpath}"
   runpath="${RVAL}"

   # mulle tools must be in front of /usr/bin, otherwise i can't develop this
   #
   # done by mulle plugin
   #
   #   r_colon_concat "${MULLE_VIRTUAL_ROOT}/.mulle/bin" "${runpath}"
   #  runpath="${RVAL}"

   r_apply_flavor_to_runpath "${MULLE_VIRTUAL_ROOT}" "${flavor}" "${runpath}"
   runpath="${RVAL}"

   log_debug "future PATH=${runpath}"

   #
   # not sure about this really anymore
   #
   rundirectory="${MULLE_VIRTUAL_ROOT}"
   if [ "${OPTION_SEARCHMODE}" = 'SUPERIOR' ]
   then
      rundirectory="${callerdirectory}"
   fi
   apply_style_to_directory "${rundirectory}" "${sharedir}" "${style}" "${flavor}"

   #
   #
   #
   local mode

   if [ ! -z "${OPTION_SHELL_COMMAND}" ]
   then
      log_verbose "Run shell command \"${OPTION_SHELL_COMMAND}\" (${MULLE_VIRTUAL_ROOT})"
      mode="SCRIPT"
   else
      log_verbose "Starting shell ${env_flag} ($MULLE_VIRTUAL_ROOT})"
      mode="INTERACTIVE"
   fi

   case "${style}" in
      */wild)
         unset MULLE_EXECUTABLE_NAME
         # unset MULLE_ENV_PLUGIN_PATH # don't do this because its needed for mulle-sde upgrade
         unset MULLE_USAGE_NAME
      ;;

      */relax|*/restrict|*/inherit)
         [ ! -z "${DISPLAY}" ]   && r_concat "${s}" "DISPLAY='${DISPLAY}'" && s="${RVAL}"
         [ ! -z "${EDITOR}" ]    && r_concat "${s}" "EDITOR='${EDITOR}'" && s="${RVAL}"
         [ ! -z "${HOME}" ]      && r_concat "${s}" "HOME='${HOME}'" && s="${RVAL}"
         [ ! -z "${LOGNAME}" ]   && r_concat "${s}" "LOGNAME='${LOGNAME}'" && s="${RVAL}"
         [ ! -z "${LS_COLORS}" ] && r_concat "${s}" "LS_COLORS='${LS_COLORS}'" && s="${RVAL}"
         [ ! -z "${PS1}" ]       && r_concat "${s}" "PS1='${PS1}'" && s="${RVAL}"
         [ ! -z "${SSH_CONNECTION}" ] \
                                 && r_concat "${s}" "SSH_CONNECTION='${SSH_CONNECTION}'" && s="${RVAL}"
         [ ! -z "${SSH_TTY}" ]   && r_concat "${s}" "SSH_TTY='${SSH_TTY}'" && s="${RVAL}"
         [ ! -z "${MULLE_ENV_PLUGIN_PATH}" ] && r_concat "${s}" "MULLE_ENV_PLUGIN_PATH='${MULLE_ENV_PLUGIN_PATH}'" && s="${RVAL}"
         [ ! -z "${MULLE_SDE_EXTENSION_PATH}" ]   && r_concat "${s}" "MULLE_SDE_EXTENSION_PATH='${MULLE_SDE_EXTENSION_PATH}'" && s="${RVAL}"
         [ ! -z "${TERM}" ]      && r_concat "${s}" "TERM='${TERM}'" && s="${RVAL}"
         [ ! -z "${TMPDIR}" ]    && r_concat "${s}" "TMPDIR='${TMPDIR}'" && s="${RVAL}"
         [ ! -z "${USER}" ]      && r_concat "${s}" "USER='${USER}'" && s="${RVAL}"
         [ ! -z "${VISUAL}" ]    && r_concat "${s}" "VISUAL='${VISUAL}'" && s="${RVAL}"
         [ ! -z "${DBUS_SESSION_BUS_ADDRESS}" ] \
                                 && r_concat "${s}" "DBUS_SESSION_BUS_ADDRESS='${DBUS_SESSION_BUS_ADDRESS}'" && s="${RVAL}"
      ;;
   esac

   #
   # home is needed for git
   # otherwise provide a minimal environment, for better reproducability
   #
   local rval

   if [ "${PWD}" != "${rundirectory}" ]
   then
      exekutor cd "${rundirectory}" || exit 1
   fi

   eval_exekutor env ${env_flag} \
          "${s}" \
          "${CUSTOM_ENVIRONMENT}" \
          "'${MULLE_ENV_LIBEXEC_DIR}/mulle-env-shell'" \
            "'${MULLE_UNAME}'" \
            "'${MULLE_HOSTNAME}'" \
            "'${MULLE_VIRTUAL_ROOT}'" \
            "'${runpath}'" \
            "'${mode}'" \
            "'${style}'" \
            "'${ENVFILENAME}'" \
            "'${TRACE}'" \
            "'${NO_MOTD}'" \
            "${OPTION_SHELL_COMMAND}" # already escaped!

   rval=$?

   log_debug "Subshell exited with $rval"
   return $rval
}


assert_valid_environment_key()
{
   local key="$1"

   local identifier

   case "${OPTION_IDENTIFIERCASE}" in
      UPPERCASE_ONLY)
         identifier="`printf "%s" "${key}" | tr -c 'a-zA-Z0-9' '_' | tr 'a-z' 'A-Z'`"
      ;;

      *)
         identifier="`printf "%s" "${key}" | tr -c 'a-zA-Z0-9' '_'`"
      ;;
   esac

   if [ "${key}" != "${identifier}" ]
   then
      fail "\"${key}\" is not a valid environment identifier"
   fi

   case "${identifier}" in
      [0-9]*)
         fail "\"${key}\" is not a valid environment identifier"
      ;;
   esac
}


define_custom_environment()
{
   log_entry "define_custom_environment" "$@"

   local keyvalue="$1"

   if [ -z "${keyvalue}" ]
   then
      fail "Missing key, directly after -D"
   fi

   local key
   local value

   key="${keyvalue%%=*}"

   if [ -z "${key}" ]
   then
      key="${keyvalue}"
   else
      value="${keyvalue#*=}"
   fi

   assert_valid_environment_key "${key}"

   r_concat "${CUSTOM_ENVIRONMENT}" "${key}='${value}'"
   CUSTOM_ENVIRONMENT="${RVAL}"
}


clean()
{
   log_entry "clean" "$@"

   _default_setup_environment "${PWD}" "${OPTION_SEARCHMODE}"

   # shellcheck source=src/mulle-env-clean.sh
   . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-clean.sh" \
      || fail "failed to load \"${MULLE_ENV_LIBEXEC_DIR}/mulle-env-clean.sh\""

   env_clean_main "$@"
}


main()
{
   # todo rename these to FLAG
   local OPTION_DIRECTORY
   local OPTION_SHELL_COMMAND
   local OPTION_KEEP_TMP='NO'
   local MULLE_FLAG_MAGNUM_FORCE=
   local OPTION_STYLE="DEFAULT"
   local OPTION_SEARCHMODE="DEFAULT"
   local OPTION_PROTECT_SHARE="DEFAULT"

   local MULLE_TRACE
   local MULLE_FLAG_EXEKUTOR_DRY_RUN
   local MULLE_FLAG_LOG_DEBUG
   local MULLE_FLAG_LOG_EXEKUTOR
   local MULLE_FLAG_LOG_TERSE
   local OPTION_COPY_MULLE_TOOL='NO'
   local CUSTOM_ENVIRONMENT

   local RESTRICTED_PATH

   # mingw needs different values here

   case "${MULLE_UNAME}" in
      "")
         internal_fail "MULLE_UNAME not set"
      ;;

      *)
         RESTRICTED_PATH="/usr/bin:/bin"
      ;;
   esac

   while [ $# -ne 0 ]
   do
      if options_technical_flags "$1"
      then
         shift
         continue
      fi

      case "$1" in
         -h*|--help|help)
            usage
         ;;

         -c)
            #
            # memo same as bash, only one argument which will be evaled
            #
            [ $# -eq 1 ] && usage "Missing argument to $1"
            shift

            printf -v OPTION_SHELL_COMMAND "%q" "$1"
         ;;

         -C)
            [ $# -eq 1 ] && usage "Missing argument to $1"
            shift

            OPTION_SHELL_COMMAND=

            local arg

            set -o noglob; IFS="
"
            for arg in $1
            do
               if [ ! -z "${arg}" ]
               then
                  if [ -z "${OPTION_SHELL_COMMAND}" ]
                  then
                     OPTION_SHELL_COMMAND="'${arg}'"
                  else
                     OPTION_SHELL_COMMAND="${OPTION_SHELL_COMMAND} '${arg}'"
                  fi
               fi
            done
            IFS="${DEFAULT_IFS}"; set +o noglob

            printf -v OPTION_SHELL_COMMAND "%q" "${OPTION_SHELL_COMMAND}"
         ;;

         -f|--force)
            MULLE_FLAG_MAGNUM_FORCE='YES'
         ;;

         --freeze)
            OPTION_COPY_MULLE_TOOL='YES'
            MULLE_FLAG_MAGNUM_FORCE='YES'
         ;;

         -d|--directory)
            [ $# -eq 1 ] && usage "Missing argument to $1"
            shift

            OPTION_DIRECTORY="$1"
         ;;

         -D*)
            local keyvalue

            local argument

            argument="`LC_ALL=C sed -e s'/^-D[ ]*//' <<< "$1" `"
            if ! define_custom_environment "${argument}"
            then
               exit 1
            fi
         ;;

         -ef|--environment-file)
            [ $# -eq 1 ] && usage "Missing argument to $1"
            shift

            ENVFILENAME="$1"
         ;;

         --keep-tmp)
            OPTION_KEEP_TMP='YES'
         ;;

         --no-motd)
            NO_MOTD='YES'
         ;;

         --protect)
            OPTION_PROTECT_SHARE='YES'
         ;;

         --no-protect)
            OPTION_PROTECT_SHARE='NO'
         ;;

         --style)
            [ $# -eq 1 ] && usage "Missing argument to $1"
            shift

            OPTION_STYLE="$1"
         ;;

         -N|--search-nearest|--no-search)  # no-search is historical
            OPTION_SEARCHMODE='NEAREST'
         ;;

         -S|--search-superior)
            OPTION_SEARCHMODE='SUPERIOR'
         ;;

         -P|--search-parent)
            OPTION_SEARCHMODE='PARENT'
         ;;

         --uppercase-only)
            OPTION_IDENTIFIERCASE='UPPERCASE_ONLY'
         ;;

         --)
            break
         ;;

         # argument gitflags
         -*)
            usage "Unknown flag \"$1\""
         ;;

         *)
            break
         ;;
      esac

      shift
   done

   options_setup_trace "${MULLE_TRACE}"
   export MULLE_TRACE

   local arg
   local url

   arg="$1"
   [ $# -ne 0 ] && shift

   case "${arg}" in
      --)
         arg="$1"
         [ $# -ne 0 ] && shift
      ;;

      clean)
         clean "$@"
         return $?
      ;;

      environment)
         # shellcheck source=src/mulle-env-environment.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-environment.sh" || exit 1

         _default_setup_environment "${PWD}" "${OPTION_SEARCHMODE}"
         env_environment_main "$@"
         return $?
      ;;

      envstyles)
         log_info "Envstyle"
         echo "inherit
relax
restrict
tight
wild"
         return 0
      ;;

      hostname)
         echo "${MULLE_HOSTNAME}"
         return 0
      ;;

      init)
         # shellcheck source=src/mulle-env-init.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-init.sh" || exit 1

         env_init_main --style "${OPTION_STYLE}" "$@" || return $?
         clean
         return $?
      ;;

      install-dir)
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-plugins.sh" || exit 1

         r_plugin_installdir

         log_info "Plugin installation directory"
         echo "${RVAL}"
         return
      ;;

      reinit)

         local style
         local flavor
         local directory
         local fallback

         directory="${MULLE_VIRTUAL_ROOT:-.}/.mulle/var/${MULLE_HOSTNAME}/env"
         fallback="${MULLE_VIRTUAL_ROOT:-.}/.mulle/share/env"
         r_simplified_absolutepath "${directory}"
         directory="${RVAL}"
         r_simplified_absolutepath "${fallback}"
         fallback="${RVAL}"

         if ! __get_saved_style_flavor "${directory}" "${fallback}"
         then
            __fail_get_saved_style_flavor "${directory}"
         fi

         # shellcheck source=src/mulle-env-init.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-init.sh" || exit 1

         MULLE_FLAG_MAGNUM_FORCE='YES'
         env_init_main --style "${style}"
         return $?
      ;;

      style)
         local style
         local flavor

         local directory="$1"

         directory="${directory:-${MULLE_VIRTUAL_ROOT}}"
         directory="${directory:-.}"
         r_simplified_absolutepath "${directory}"
         directory="${RVAL}"

         if ! __get_saved_style_flavor "${directory}/.mulle/var/${MULLE_HOSTNAME}/env" \
                                       "${directory}/.mulle/share/env"
         then
            __fail_get_saved_style_flavor "${directory}/.mulle/var/${MULLE_HOSTNAME}/env"
         fi

         echo "${style}"
         return 0
      ;;

      subenv)
         if [ -z "${MULLE_VIRTUAL_ROOT}" ]
         then
            fail "\"subenv\" must be called from inside a subshell"
         fi

         [ $# -eq 0 ] && usage "Missing argument to \"${arg}\""
         [ $# -ne 1 ] && usage "Superflous arguments to \"${arg}\""

         _run_subenv "$1"
         return $?
      ;;

      searchpath)
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-plugins.sh" || exit 1

         log_info "Plugin searchpath"

         r_plugin_searchpath
         echo "${RVAL}"
         return
      ;;

      tool)
         # do not set MULLE_VIRTUAL_ROOT if not already set
         _default_setup_environment "${PWD}" "${OPTION_SEARCHMODE}" 'NO'

         # shellcheck source=src/mulle-env-tool.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-tool2.sh" || exit 1

         env_tool2_main "$@"
         return $?
      ;;

      toolstyles|plugins)
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-plugins.sh" || exit 1

         log_info "Toolstyle"
         env_all_plugin_names
         return $?
      ;;

      show)
         log_verbose "Use --style <toolstyle>/<envstyle>"

         main toolstyles
         main envstyles
         return $?
      ;;

      tweak)
         # shellcheck source=src/mulle-env-environment.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-environment.sh" || exit 1

         _default_setup_environment "${PWD}" "${OPTION_SEARCHMODE}"
         mkdir_if_missing "${MULLE_ENV_ETC_DIR}/tweak"
         redirect_exekutor "${MULLE_ENV_ETC_DIR}/tweak/$1" echo "intentionally blank"
         return $?
      ;;

      uname)
         echo "${MULLE_UNAME}"
         return 0
      ;;

      untweak)
         # shellcheck source=src/mulle-env-environment.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-environment.sh" || exit 1

         _default_setup_environment "${PWD}" "${OPTION_SEARCHMODE}"
         remove_file_if_present "${MULLE_ENV_ETC_DIR}/tweak/$1"
         rmdir_if_empty "${MULLE_ENV_ETC_DIR}/tweak"
         return $?
      ;;

      upgrade)
         MULLE_FLAG_MAGNUM_FORCE='YES'

         # shellcheck source=src/mulle-env-init.sh
         . "${MULLE_ENV_LIBEXEC_DIR}/mulle-env-init.sh" || exit 1

         env_init_main --upgrade --style "${OPTION_STYLE}" "$@" || exit 1
         clean
         return $?
      ;;

      "")
      ;;

      *)
         OPTION_DIRECTORY="${cmd}"
         [ $# -eq 0 ] || usage "Superflous argument \"${arg}\""
      ;;
   esac

   #
   # lets do this for now
   #
   if [ ! -z "${MULLE_VIRTUAL_ROOT}" ]
   then
      fail "You are already in the virtual \
environment \"${MULLE_VIRTUAL_ROOT}\". Environments don't stack."
   fi

   # inherits all options ....
   _run_subshell
}


########
###
### INIT
###
_init()
{
   if [ "$1" = "version" ]
   then
      echo "${MULLE_ENV_VERSION}"
      exit 0
   fi

   MULLE_BASHFUNCTIONS_LIBEXEC_DIR="`mulle-bashfunctions-env libexec-dir 2> /dev/null`"
   [ -z "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}" ] && \
      echo "mulle-bashfunctions-env not installed" >&2 && \
      exit 1

   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-bashfunctions.sh" "minimal" || exit 1
   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-path.sh" || exit 1
   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-file.sh" || exit 1

   local _libexec_dir

   _get_libexec_dir "$0" "mulle-env" "mulle-env-shell"

   if [ -z "${_libexec_dir}" ]
   then
      fail "Fatal Error: Could not find libexec for ${MULLE_EXECUTABLE} ($PWD)"
   fi
   MULLE_ENV_LIBEXEC_DIR="${_libexec_dir}"

   #
   # minimal setup exit
   #
   if [ "$1" = "libexec-dir" ]
   then
      echo "${MULLE_ENV_LIBEXEC_DIR}"
      exit 0
   fi

   set -o pipefail
}


_init "$@"
main "$@"

