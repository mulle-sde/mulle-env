    node[shape=note];
    edge[arrowhead=none];

        "mulle-env init" [ label="mulle-env init -d project --style minimal/tight",
                           fontname="monospace",
                           fontcolor="blue",
                           shape="none" ]

        "mulle-env init" -> "project" [ arrowhead="", style="dotted", label=" create"]
