        ".mulle-env"   [ shape="folder" ]
        "var"          [ shape="folder" ]
        "<hostname>"   [ shape="folder" ]
        "etc"          [ shape="folder" ]
        "share"        [ shape="folder" ]
        "bin"          [ shape="folder" ]

        "tool"
        "environment.sh"

        "project"    ->  ".mulle-env"
        ".mulle-env" ->  "var"
        ".mulle-env" ->  "etc"
        ".mulle-env" ->  "share"
        "var"        ->  "<hostname>"
        "<hostname>" -> "bin"
        "share"      -> "environment.sh"
        "share"      -> "tool"
        "share"      -> "optionaltool"
        "bin"        ->     "..."
        "..." [ shape="none"]
}
